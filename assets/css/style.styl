@import 'nib'

bgClr = #222

@keyframes breathe1
  from
    transform translate(0px,0px) scale(1.11,1.11)
  to
    transform translate(0px,-10px) scale(1.1,1.1)

@keyframes breathe2
  from
    transform translate(0px,0px) scale(1.1,1.1)
  to
    transform translate(0px,10px) scale(1.1,1.1)

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family sans-serif
  color white
  perspective 500px


.scratches, .city
  position fixed
  z-index -1
  width 100%
  height 100%

.scratches
  animation breathe1 3s ease-in-out alternate infinite
  background url(scratches.png) center center
  background-size cover
  opacity 0.1

.city
  animation breathe2 3s ease-in-out alternate infinite
  background black url(bg.jpg) center center
  background-size cover


.cpu-info
  position absolute
  top 50px
  left 50px

  transform rotateY(5deg) rotateZ(1deg)
  transform-origin left
  // background rgba(0,0,0,0.1)
  // border 0px solid rgba(0,0,0,0.3)
  // border-top-width 5px

  .model-name
    margin 10px
    text-transform uppercase
    font-size 10px

  .processor
    width 150px
    .bar, .inner
      height 3px
    .bar
      background rgba(0,0,0,0.1)
      margin 10px
    .inner
      transition 0.1s linear width
