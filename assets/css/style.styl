@import 'nib'

bgClr = #222

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family sans-serif
  background black url(bg.jpg) center center
  background-size cover
  color white

.scratches
  position fixed
  z-index -1
  width 100%
  height 100%
  background url(scratches.png) center center
  background-size cover
  opacity 0.2

h1
  padding 10px
  text-transform uppercase
  font-size 10px
  font-weight normal
  color #f33

.cpu-info

  .model-name
    margin 10px
    text-transform uppercase
    font-size 10px

  .processor
    width 150px
    .bar, .inner
      height 5px
    .bar
      background rgba(0,0,0,0.1)
      margin 10px
    .inner
      transition 0.1s linear width
