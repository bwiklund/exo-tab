@import 'nib'

bgClr = #222

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family sans-serif
  background radial-gradient(bgClr,darken(bgClr,20%))
  color white

h1
  padding 10px
  text-transform uppercase
  font-size 10px
  font-weight normal
  color #f33

.cpu-info

  .model-name
    margin 10px
    text-transform uppercase
    font-size 10px

  .processor
    width 150px
    .bar, .inner
      height 5px
    .bar
      background rgba(0,0,0,0.1)
      margin 10px
    .inner
      transition 0.1s linear width
